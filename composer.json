{
    "name": "isaac/composer-velocita",
    "description": "Composer plugin that transparently rewrites downloads to a Velocita server",
    "keywords": ["composer", "cache", "performance", "speed", "velocita"],
    "type": "composer-plugin",
    "license": "MIT",
    "authors": [
        {
            "name": "Jelle Raaijmakers",
            "email": "jelle.raaijmakers@isaac.nl",
            "homepage": "https://www.isaac.nl"
        }
    ],
    "require": {
        "php": ">=7.2",
        "ext-json": "*",
        "composer-plugin-api": "^1.1.0"
    },
    "require-dev": {
        "composer/composer": "^1.8.4",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.5",
        "object-calisthenics/phpcs-calisthenics-rules": "^3.4",
        "slevomat/coding-standard": "^4.8",
        "phpstan/phpstan": "^0.11.2"
    },
    "autoload": {
        "psr-4": {
            "ISAAC\\Velocita\\Composer\\": "src/"
        }
    },
    "extra": {
        "class": "ISAAC\\Velocita\\Composer\\VelocitaPlugin"
    }
}
